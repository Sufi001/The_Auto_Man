@model Inventory.ViewModels.BrandViewModel
@{

}
<style>
    .callout, .card, .info-box, .mb-3, .my-3, .small-box {
        margin-bottom: 0.2rem !important;
    }

    .card-header {
        padding: .50rem 1.0rem;
        padding-top: 0.25rem;
        padding-right: 1.0rem;
        padding-bottom: 0.0rem;
        padding-left: 1.25rem;
    }

    select:focus, input:focus {
        outline: none !important;
        border-color: #719ECE !important;
        box-shadow: 0 0 20px #719ECE !important;
    }

    #list, #Sumbit {
        width: 90px;
        margin-left: 3px;
    }
</style>

@using (Html.BeginForm("Save", "Brand", FormMethod.Post, new { enctype = "multipart/form-data", id = "Form", Class = "was-validated" }))
{
    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @type = "hidden" } })
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row" id="_form">
                <div class="col-12">
                    <!-- Custom Tabs -->
                    <div class="card">
                        <div class="card-header d-flex p-0" style="background-color:#3498DB">
                                <h2 class="card-title p-3"><b style="color:white">Brand</b></h2>
                            <ul class="nav nav-pills ml-auto p-2">
                                    <li><input style="border:1px solid; background-color:#3985d2;color:white" type="button" value="Save" id="Sumbit" class="btn fa-pull-right" /></li>
                                    <li><button style="border:1px solid; background-color:#3985d2;color:white" type="button" id="list" class="btn  fa-pull-right" onclick="location.href='@Url.Action("List", "Brand", new { target="_blank" })'">List</button></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-12">
                                    <div class="form-group has-float-label">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control myCustomfocus", @required = "required", @placeholder = "Brand", maxlength = "20", autocomplete = "off" } })
                                        <label for="Name">Brand</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    <script>
        $(document).ready(function () {
            $('#Name').focus();
        });
        @if (ViewBag.Error != null)
        {
            @:toastr.error("@ViewBag.Error");
                }
        @if (TempData["Success"] != null)
        {
            @:toastr.success("@TempData["Success"]");
                }



        $("#Sumbit").click(function () {
            var Name = $('#Name').val();

            var Id = $('#Id').val();

            if (Name == null || Name == "") {
                toastr.error("Name Cannot be Empty");
                return;
            }



            $("#Form").submit();
        });
    </script>
}