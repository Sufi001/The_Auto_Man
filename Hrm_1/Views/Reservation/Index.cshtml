@section scripts{
    <script src="~/AdminLte/plugins/moment/moment.min.js"></script>
    <script src="~/Scripts/fullcalendar.min.js"></script>
    <script src="~/content/js/Reservation.js"></script>
    <script type="text/javascript">
        @if (ViewBag.Update != null)
                {
                    @:$('#myModal').modal();
                                }
        $('#ddl_ROOM').empty();
        $('#ddl_ROOM').append(new Option('Select Room', ''));

        $(document).ready(function () {
            if ($("#RES_ID").val() == "" || $("#RES_ID").val() == 0) {
                $("#btn_cancel").attr('disabled', 'disabled');
                $('#btn_authorize').attr('disabled', 'disabled');
                $('#btn_journal').attr('disabled', 'disabled');
                $('#btn_print').attr('disabled', 'disabled');
            }
            if ($("#STATUS").val() == 3) {
                $('#btn_authorize').attr('disabled', 'disabled');
                $("#add_btn").attr('disabled', 'disabled');
                $('#btn_save').attr('disabled', 'disabled');
                $("#btn_cancel").attr('disabled', 'disabled');
            }
            if ($("#STATUS").val() == 1) {
                $('#btn_authorize').removeAttr('disabled');
                $('#add_btn').removeAttr('disabled');
                $('#btn_save').removeAttr('disabled');
            }

            //var today = moment().format('YYYY-MM-DD');
            //fetchevents();
            Events();
        });
        var events = [];
        function Events() {
            $.ajax({
                url: "/Reservation/GetEvents",
                method: "GET",
            }).done(function (obj) {
                if (obj != null) {
                    var obj = JSON.parse(obj);
                    $.each(obj, function (i, v) {
                        events.push({
                            title: v.Name,
                            //start: moment(v.CheckIn).format("YYYY-DD-MM"),
                            start: moment(v.CheckIn),
                            //end: v.CheckOut,
                            eventId: v.Id,
                            Status: v.Status,
                            Room: v.Room
                        });
                    });
                    GenerateCalender(events);
                }
                else {
                    toastr.error("No Event Is Registred Yet");
                }
            }).fail(function (obj) {
                toastr.error("User Suggesstion is Not Working");
            });
        }
        function GenerateCalender(events) {
            $('#calender').fullCalendar('destroy');
            $('#calender').fullCalendar({
                contentHeight: 1000,
                defaultDate: new Date(),
                timeFormat: 'hh(:mm)a',
                buttonText: {
                    month: 'Month',
                    week: 'Week',
                    day: 'Day'
                },
                customButtons: {
                    btnList: {
                        text: 'List',
                        click: function () {
                            window.location.href = "/Reservation/List"
                        }
                    }
                },
                header: {
                    left: 'prev,next',
                    center: 'title',
                    right: 'btnList,month,basicWeek,basicDay'
                },
                eventLimit: true,
                eventColor: '#378006',
                events: events,
                eventRender: function (event, element) {
                    if (event.Status == "1") {
                        element.css('background-color', '#d43f3a');
                    }
                    //if (event.Doctype == "3") {
                    //    element.css('background-color', '#337ab7');
                    //}
                    //else {

                    //}
                },
                eventClick: function (calEvent, jsEvent, view) {
                    if (calEvent.eventId != "") {
                        window.location.replace("/Reservation/Edit?id=" + calEvent.eventId);
                    }
                    else {
                        $('#myModal').modal();
                        $('#myModal').removeAttr('style');
                    }
                },
                dayClick: function (date, jsEvent, view) {
                    $('#myModal').modal();
                    $('#myModal').removeAttr('style');
                    ClearForm();
                }
            })
        }

        function Print_Report() {
            var RES_ID = $("#RES_ID").val();
            if (RES_ID != "" && RES_ID != null && RES_ID > 0) {
                var DetailUrl = "/Reports/ReservationForm?resId=" + RES_ID;
                window.open(DetailUrl, '_blank');
                //$('#ReportModal').attr('src', DetailUrl);
                //$('#myReportModal').modal();
            }
            else {
                toastr.error("Nothing Selected");
            }
        }

        function showItemsModel() {
            $('#AddNewItem').modal();
        }
        function showAmenitiesModel() {
            $('#AddNewAmenity').modal();
        }

        function Journal() {
            var RES_ID = $("#RES_ID").val();
            if (RES_ID != "" && RES_ID != null && RES_ID > 0) {
                var DetailUrl = "/Reports/Journal?resId=" + RES_ID;
                window.open(DetailUrl, '_blank');
                //$('#ReportModal').attr('src', DetailUrl);
                //$('#myReportModal').modal();
            }
            else {
                toastr.error("Nothing Selected");
            }
        }

    </script>
}



