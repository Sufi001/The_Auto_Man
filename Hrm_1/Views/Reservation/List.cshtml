@model  IEnumerable<Inventory.ViewModels.Reservation.ReservationMain> 
@{
    ViewBag.Title = "List";
}
@section CSS{}
<style>
    #list {
        width: 110px;
        margin-left: 3px;
    }

    #Product {
        width: 90px;
        margin-left: 3px;
    }

    table thead tr th {
        color: white;
    }
</style>
<div class="container-fluid">
    <div class="content-wrapper">
        <section class="content">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header" style="background-color:#3498DB;height:55px">
                            <div class="row">
                                <div class="col-6 pt-1">
                                    <h2 class="card-title"><b style="color:white">Reservation List</b></h2>
                                </div>
                                <div class="col-6">
                                    <button style="border:1px solid; background-color:#3985d2;color:white" type="button" id="list" class="btn fa-pull-right" onclick="location.href='@Url.Action("Index", "Reservation", new { target="_blank" })'">Reservation</button>
                                </div>
                            </div>

                        </div>
                        @{int i = 0;}
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-striped" width="100%" cellspacing="0">
                                    <thead style="background-color:#3498DB">
                                        <tr>
                                            <th class="col-xs-1">No</th>
                                            <th>Customer Name</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            i = i + 1;
                                            <tr>
                                                <td class="col-xs-1">@i</td>
                                                <td>@Html.ActionLink(item.FIRST_NAME + item.LAST_NAME,"Edit", new { id = item.RES_ID})</td>
                                                <td>@item.DOC_DATE.ToString("dd-MM-yyyy")</td>
                                                <td>@item.CITY</td>
                                                @{
                                                    var amount = String.Format("{0:0.00}", item.TOTAL_AMT);
                                                }
                                                <td style="">@amount</td>
                                                <td>@item.STATUS</td>
                                            </tr>
                                                    }

                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
@section scripts
{
   <script src="~/AdminLte/plugins/datatables/jquery.dataTables.js"></script>
<script src="~/AdminLte/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script>
  $(function () {
      $("#example1").DataTable({
          "pageLength": 50
      });
  });
</script>
}


