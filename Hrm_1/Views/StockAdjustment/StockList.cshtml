
@model IEnumerable<Inventory.ViewModels.DocumentListViewModel>
@{
    ViewBag.Title = "List";
}
@section CSS{}
<style>
    #list, #Product {
        margin-left: 3px;
    }

    table thead tr th {
        color: white;
    }
</style>

<div class="container-fluid">
    <div class="content-wrapper">
        <section class="content">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header" style="background-color:#3498DB;height:55px">
                            <div class="row">
                                <div class="col-6 pt-1">
                                    <h2 class="card-title"><b style="color:white;width:200px;">Stock List</b></h2>
                                </div>
                                <div class="col-6">
                                    <button style="border:1px solid; background-color:#3985d2;color:white" type="button" id="list" class="btn fa-pull-right" onclick="location.href='@Url.Action("Adjustment", "StockAdjustment", new { target="_blank" })'">Stock Adjustment</button>
                                </div>
                            </div>

                        </div>
                        @{int i = 0;}
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example1" class="table table-bordered table-striped" width="100%" cellspacing="0">
                                    <thead style="background-color:#3498DB">
                                        <tr>
                                            <th>No</th>
                                            <th>Doc No</th>
                                            <th>Name</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Amount</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            i = i + 1;
                                            <tr>
                                                <td>@i</td>
                                                <td>@Html.ActionLink(item.DocNo, "EditStock", new { docno = item.DocNo })</td>
                                                <td>@item.Supplier</td>
                                                <td>@item.Doc.ToString("dd-MM-yyyy")</td>
                                                <td>@item.Location</td>
                                                @{
                                                    var data = String.Format("{0:0.00}", item.Amount);
                                                }
                                                <td style="">@data</td>

                                                <td>@item.Status</td>
                                            </tr>
                                                    }

                                    </tbody>

                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts
{
    <script src="~/AdminLte/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/AdminLte/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <script>
  $(function () {
      $("#example1").DataTable({
          "pageLength": 50
      });

  });
    </script>
}






